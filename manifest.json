{
    "manifest_version": 2,
    "name": "Auto Connect LinkedIn",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": ["foreground.js"]
        }
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Auto Connect LinkedIn"
    }
}